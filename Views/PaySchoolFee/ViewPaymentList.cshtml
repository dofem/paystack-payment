@{
    ViewData["Title"] = "ViewPaymentList";
    var transactions = ViewData["transactions"] as List<TransactionModel>;
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Amount Paid</th>
                <th>Transaction Reference</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in transactions)
            {
                <td>@transaction.StudentName</td>
                <td>@transaction.Email</td>
                <td>@transaction.Amount</td>
                <td>@transaction.TransRef</td>
            }
        </tbody>
    </table>
</div>

