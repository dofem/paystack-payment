@{
    ViewData["Title"] = "PaySchoolFee";
    var error = ViewData["error"] as string;
    PaySchoolFeeViewModel pay = new PaySchoolFeeViewModel();
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh">
    <div class="card" style="width:24rem">
        <div class="card-body">
            <h1 class="card-title text-center">Pay School Fee</h1>
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="alert alert-danger">@error</div>
            }
            <form method="post" asp-controller="PaySchoolFee" asp-action="Index">
                <div class="form-group">
                    <label for="name">Student Name</label>
                    <input type="text" class="form-control" asp-for="@pay.StudentName"  name="StudentName" id="name" required />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="@pay.Email" name="Email" id="Email" required />
                </div>
                <div class="form-group mb-2">
                    <label for="Amount">Amount</label>
                    <input type="number" class="form-control" asp-for="@pay.Amount" name="Amount" id="Amount" required />
                </div>

                <div>
                    <button type="submit" class="btn btn-primary w-100">Pay</button>
                </div>
               
            </form>
        </div>
    </div>
</div>

